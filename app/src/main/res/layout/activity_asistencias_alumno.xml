<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/fondo_alumnos"
    tools:context=".AsistenciasAlumno">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btn_regresar_asistencias"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/img_regresar"
                        android:layout_gravity="start"
                        android:scaleX=".9"
                        android:scaleY=".9"
                        android:background="@color/white"
                        app:tint="@color/color7" />
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:backgroundTint="@color/color5"
                        android:visibility="invisible"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/tuto_logo"
                        android:scaleX=".8"
                        android:scaleY=".8"
                        android:backgroundTint="@color/white"
                        android:layout_marginTop="-320dp"/>
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:backgroundTint="@color/color5"
                        android:visibility="invisible"/>
                    <ImageButton
                        android:id="@+id/btnmenu_alumno_asistencias"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/img_menu"
                        android:backgroundTint="@color/color7"
                        android:contentDescription="@string/menu_button_description"
                        app:tint="@color/white" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-310dp"
            android:padding="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto40"
                android:textAlignment="center"
                android:textSize="38sp"
                android:textStyle="bold"
                android:textColor="@color/color8"
                android:layout_marginBottom="30dp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/texto29"
                        android:textColor="@color/color9"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/border"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/texto30"
                        android:textColor="@color/color9"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/border"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/texto41"
                        android:textColor="@color/color9"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/border"/>

                </TableRow>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvasistencias_alumno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/card_asistencias_alumno"/>

            </TableLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>