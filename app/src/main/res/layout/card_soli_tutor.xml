<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/color2">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="2dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tema_soli_tutor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:text="@string/hint16"
                    android:textAlignment="center"
                    android:textColor="@color/color3"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/area_soli_tutor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:text="@string/hint17"
                    android:textAlignment="center"
                    android:textColor="@color/color3"
                    android:textSize="10sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/nombre_soli_tutor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:text="@string/texto05"
                    android:textAlignment="center"
                    android:textColor="@color/color3"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/confirmar_soli_tutor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:background="@drawable/border"
                    android:src="@drawable/img_si_asistencia" />

                <ImageButton
                    android:id="@+id/rechazar_soli_tutor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:background="@drawable/border"
                    android:src="@drawable/img_no_asistencia" />


            </TableRow>
        </TableLayout>


    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>