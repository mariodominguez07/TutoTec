<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/fondo_tutores"
    tools:context=".ActividadesTutor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/tuto_logo"
                        android:scaleX=".8"
                        android:scaleY=".8"
                        android:backgroundTint="@color/white"
                        android:layout_marginTop="-320dp"/>

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/img_actividades"
                        android:backgroundTint="@color/color5"
                        android:visibility="invisible"/>

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/img_actividades"
                        android:backgroundTint="@color/color5"
                        android:visibility="invisible"/>

                    <ImageButton
                        android:id="@+id/btnmenu_tutor_actividades"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/img_menu"
                        android:backgroundTint="@color/color8"
                        android:contentDescription="@string/menu_button_description"
                        app:tint="@color/white" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-310dp"
            android:padding="20dp">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/color2">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"/>
                    <Button
                        android:id="@+id/btn_agregar_actividad_tutor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/boton07"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:textColor="@color/color8"
                        android:drawableRight="@drawable/img_agregar_actividades"
                        android:drawableTint="@color/color8"
                        android:backgroundTint="@color/white"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"/>
                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color9">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/texto28"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="26sp"/>
                </TableRow>


            </TableLayout>
            <TableLayout
                android:id="@+id/tablaActividades_Tutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/texto29"
                        android:textColor="@color/color9"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/border"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/texto30"
                        android:textColor="@color/color9"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/border"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:text="@string/texto31"
                        android:textSize="10sp"
                        android:textColor="@color/color9"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/border"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:text="@string/texto32"
                        android:textSize="10sp"
                        android:textColor="@color/color9"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/border"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:text="@string/texto33"
                        android:textSize="10sp"
                        android:textColor="@color/color9"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="@drawable/border"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>