<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/fondo_alumnos"
    tools:context=".DetalleActividad">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btn_regresar_detact"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/img_regresar"
                        android:layout_gravity="start"
                        android:scaleX=".9"
                        android:scaleY=".9"
                        android:background="@color/white"
                        app:tint="@color/color7" />
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:backgroundTint="@color/color5"
                        android:visibility="invisible"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/tuto_logo"
                        android:scaleX=".8"
                        android:scaleY=".8"
                        android:backgroundTint="@color/white"
                        android:layout_marginTop="-320dp"/>
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:backgroundTint="@color/color5"
                        android:visibility="invisible"/>
                    <ImageButton
                        android:id="@+id/btnmenu_alumno_detact"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/img_menu"
                        android:backgroundTint="@color/color7"
                        android:contentDescription="@string/menu_button_description"
                        app:tint="@color/white" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-310dp"
            android:padding="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto19"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/color7"
                android:background="@drawable/rounded_corners"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/txtActividiad_detalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto29"
                android:textAlignment="center"
                android:textSize="26sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/color8"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/txtdescripcion_detalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto42"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/color4"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/txtlugar_detalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto43"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/color4"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/txtfecha_detalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto44"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/color4"
                android:layout_marginBottom="30dp"/>


        </LinearLayout>
    </LinearLayout>

</ScrollView>